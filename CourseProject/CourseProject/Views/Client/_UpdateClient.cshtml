@model ClientIndexViewModel
<h3>
    Изменение записи
</h3>
@using (Html.BeginForm("UpdateClient", "Client", FormMethod.Post))
{
    <div>
        @Html.LabelFor(m => m.Id)
        <div class="col-md-10">
            <select name="Id">
                @foreach (var id in Model.Ids)
                {
                    <option>@id</option>
                }
            </select>
        </div>
    </div>
    <div>
        @Html.LabelFor(m => m.Name)
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name)
        </div>
    </div>
    <div>
        @Html.LabelFor(m => m.RepresentativeFIO)
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RepresentativeFIO)
        </div>
    </div>
    <div>
        @Html.LabelFor(m => m.Number)
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Number)
        </div>
    </div>
    <div>
        @Html.LabelFor(m => m.Address)
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address)
        </div>
    </div>
    <div>
        <div>
            <input type="submit" class="btn btn-default" value="Изменить" />
        </div>
    </div>
}

