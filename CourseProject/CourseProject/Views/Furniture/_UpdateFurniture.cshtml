@model FurnitureIndexViewModel
<h3>
    Изменение записи
</h3>
@using (Html.BeginForm("UpdateFurniture", "Furniture", FormMethod.Post))
{
    <div>
        @Html.LabelFor(m => m.Id)
        <div class="col-md-10">
            <select name="Id">
                @foreach (var id in Model.Ids)
                {
                    <option>@id</option>
                }
            </select>
        </div>
    </div>
    <div>
        @Html.LabelFor(m => m.Name)
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name)
        </div>
    </div>
    <div>
        @Html.LabelFor(m => m.Description)
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Description)
        </div>
    </div>
    <div>
        @Html.LabelFor(m => m.Material)
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Material)
        </div>
    </div>
    <div>
        @Html.LabelFor(m => m.Price)
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Price)
        </div>
    </div>
    <div>
        @Html.LabelFor(m => m.Count)
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Count)
        </div>
    </div>
    <div>
        <div>
            <input type="submit" class="btn btn-default" value="Изменить" />
        </div>
    </div>
}

